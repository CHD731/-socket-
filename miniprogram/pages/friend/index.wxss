/* pages/friend/index.wxss */

.list-item {
  display: flex;
}
.avatar {
  width: 66px;
  height: 66px;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.center {
  flex: 1;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ededed;
  padding-bottom: 20rpx;
}
.left {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.nikname {
  font-size: 1rem;
  font-weight: 500;
}
.last-chat {
  font-size: 0.9rem;
  color: #999;
}
.right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-right: 10rpx;
  align-items:center;
}
.time {
  font-size: 0.8rem;
  color: #999;
}
.new {
  font-size: 0.8rem;
  color: #fff;
  background-color: red;
  border-radius: 10px;
  padding: 5rpx 10rpx;
  font-style: italic;
  font-weight: 600;
}