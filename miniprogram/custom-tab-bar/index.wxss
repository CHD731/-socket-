.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 44px;
  border-top: 1px solid #C6C6C6;
}
.switch-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.img {
  width: 50rpx;
  height: 50rpx;
  vertical-align: bottom;
}
.bottomtext {
  color: #C6C6C6;
  font-size: 12px;
}


.bulge {
  background-color: #fff;
}
.bulge .tab-bar-bulge {
  position: absolute;
  top: -18px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border-top: 1px solid #e6e6e6;
  background-color: #25B387;
  margin-left: -8.6%;
}
.bulge .img{
  position: absolute;
  z-index: 1;
  width: 45px;
  height: 45px;
  top: -20px;
  padding-top: 10px;
  margin-left: -6%;
}
